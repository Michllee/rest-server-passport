<script>
    function hotNewSlider() {
        var $item = $('.slider-item');
        var num = $item.length;
        var currentIndex = 0;
        var preIndex = num -1;
        var nextIndex = 1;

        function changeIndex(){
            currentIndex = $('.slider-item.current').index();
            preIndex = currentIndex == 0 ? num-1 :currentIndex-1;
            nextIndex = currentIndex == num-1 ? 0 : currentIndex +1; 
        }

        function slide(){
            setInterval(function(){
            $item.eq(currentIndex).removeClass('current').addClass('pre');
            $item.eq(nextIndex).addClass('current animi-right');
            setTimeout(function(){
                $item.eq(preIndex).removeClass('pre animi-right');
            },800)
            changeIndex();

            },5000)
        }
        slide();
        
        

    }

    hotNewSlider();
</script>
